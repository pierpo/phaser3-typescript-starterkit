{
  "scripts": {
    "build": "webpack -p --config webpack.prod.js",
    "start": "webpack-dev-server",
    "pretest": "tsc --project .",
    "test": "yarn lint && jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "deploy": "yarn build && gh-pages -d dist"
  },
  "dependencies": {
    "awesome-typescript-loader": "^5.2.1",
    "gh-pages": "2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "phaser": "3.16.2"
  },
  "devDependencies": {
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "babel-core": "^6.26.3",
    "babel-jest": "24.9.0",
    "copy-webpack-plugin": "5.0.4",
    "favicons-webpack-plugin": "0.0.9",
    "husky": "1.3.1",
    "jest": "24.9.0",
    "source-map-loader": "^0.2.3",
    "ts-jest": "24.0.2",
    "tslint": "5.13.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.6.3",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.8",
    "webpack-dev-server": "3.8.0",
    "webpack-merge": "4.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "json",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
